<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".strength">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontall"
                android:text="목표 심박수 "
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/explain"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="📌강도별"
                android:textColor="#EA4A4A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/fontall" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="원하는 운동 강도 범위(%)를 설정합니다:"
            android:textSize="15sp"
            android:textColor="#090808"
            android:fontFamily="@font/fontall" />


        <TextView
            android:id="@+id/devicelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="50"
            android:textAlignment="center"
            android:textColor="#EC84A7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/fontall" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:max="50"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_seekbar1"
            android:thumb="@drawable/seekbar_seekbar1_thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.233" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="390dp"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/kakaotalk_20221119_214751615"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="299dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/purple_200"
            android:text="측정"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.825"
            android:fontFamily="@font/fontall" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>